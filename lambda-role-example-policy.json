{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Sid": "CountDBRead",
            "Action": [
                "s3:GetObject",
                "s3:ListBucket"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:s3:::my-bucket",
                "arn:aws:s3:::my-bucket/my-table/*"
            ]
        },
        {
            "Sid": "CountDBBucket",
            "Action": [
                "s3:GetBucketLocation",
                "s3:GetLifecycleConfiguration",
                "s3:PutLifecycleConfiguration"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:s3:::count-db-bucket"
            ]
        },
        {
            "Sid": "CountDBWrite",
            "Action": [
                "s3:GetObject",
                "s3:PutObject",
                "s3:DeleteObject",
                "s3:ListBucket",
                "s3:GetBucketLocation"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:s3:::count-db-bucket/countdb/*",
                "arn:aws:s3:::count-db-bucket/temp/*"
            ]
        },
        {
            "Sid": "CountDBAthena",
            "Action": [
                "athena:GetQueryExecution",
                "athena:GetQueryResults",
                "athena:GetWorkGroup",
                "athena:StartQueryExecution",
                "athena:StopQueryExecution"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:athena:us-east-1:123456789:workgroup/countdb",
                "arn:aws:athena:us-east-1:123456789:datacatalog/*",
                "arn:aws:athena:us-east-1:123456789:database/*"
            ]
        },
        {
            "Sid": "CountDBGlueRead",
            "Action": [
                "glue:GetDatabase",
                "glue:GetDatabases",
                "glue:GetTable",
                "glue:GetTables",
                "glue:GetPartition",
                "glue:GetPartitions",
                "glue:CreateTable",
                "glue:DeleteTable",
                "glue:CreatePartition",
                "glue:BatchCreatePartition",
                "glue:DeletePartition",
                "glue:BatchDeletePartition"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:glue:us-east-1:123456789:catalog",
                "arn:aws:glue:us-east-1:123456789:database/*",
                "arn:aws:glue:us-east-1:123456789:table/*/*"
            ]
        },
        {
            "Sid": "CountDBGlueWrite",
            "Action": [
                "glue:CreateTable",
                "glue:DeleteTable",
                "glue:CreatePartition",
                "glue:BatchCreatePartition",
                "glue:DeletePartition",
                "glue:BatchDeletePartition"
            ],
            "Effect": "Allow",
            "Resource": [
                "arn:aws:glue:us-east-1:123456789:catalog",
                "arn:aws:glue:us-east-1:123456789:database/countdb",
                "arn:aws:glue:us-east-1:123456789:table/countdb/*"
            ]
        },
        {
            "Sid": "CountDBLambda",
            "Action": [
                "events:PutRule",
                "events:PutTargets",
                "events:RemoveTargets",
                "events:DeleteRule",
                "events:DescribeRule",
                "events:ListRules",
                "events:ListTargetsByRule"
            ],
            "Effect": "Allow",
            "Resource": "arn:aws:events:*:123456789:rule/countdb*"
        },
        {
            "Sid": "CountDBLogs",
            "Action": [
                "logs:CreateLogGroup",
                "logs:CreateLogStream",
                "logs:PutLogEvents"
            ],
            "Effect": "Allow",
            "Resource": "arn:aws:logs:*:123456789:log-group:/aws/lambda/countdb:*"
        }]
}